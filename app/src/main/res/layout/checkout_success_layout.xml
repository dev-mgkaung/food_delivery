<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/grey_100"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="180dp"
        android:layout_height="180dp"
       android:layout_gravity="center"
        android:src="@drawable/success"
        android:id="@+id/btn_success"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:text="Thank You For \n Your Order"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/red_500"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:textAlignment="center"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="4dp"
        android:text="You can track the delivery \n in the order sections"
        android:textStyle="bold"
        android:textColor="@color/text_color_primary"
        android:layout_marginBottom="80dp"
        android:textSize="16sp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_btn_red"
        android:layout_margin="10dp"
        android:id="@+id/btn_order_track"
        android:text="Track My Order"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_btn_white"
        android:layout_margin="10dp"
        android:id="@+id/btn_order_something"
        android:layout_gravity="bottom|end"
        android:text="Order Something Else"/>
</LinearLayout>